SMSGW_VERSION=1.0.0

# Path to the modem device (e.g. /dev/ttyUSB0)
DEVICE=/dev/ttyUSB0

# Serial baud rate for the modem
BAUDRATE=115200

# Telegram bot token used to send messages
TELEGRAM_BOT_TOKEN=123:ABC

# Telegram chat ID where SMS will be forwarded
TELEGRAM_CHAT_ID=123456

# Optional log level for gammu (1..3)
LOGLEVEL=1

# Optional path for gammu spool directories
GAMMU_SPOOL_PATH=/var/spool/gammu

# Optional path for smsdrc config
GAMMU_CONFIG_PATH=/etc/gammu-smsdrc
